		<mx:Canvas id="view" width="100%" height="100%">
			<mx:HBox width="100%" >
				<mx:Label fontSize="16" text="Titre de l'oeuvre :" /><mx:TextInput id="UpdLib" /><mx:Button label="Modifier" click="updateItem()" visible="{bModif}" />
