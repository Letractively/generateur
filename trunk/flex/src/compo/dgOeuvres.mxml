													<co:cUploadFile visible="{this.parentApplication.uti.administration}" idExi="{this.parentApplication.uti.idUti}" wf="auton" ttBtn="Importer un dictionnaire" id="uf" iconBtn="@Embed('images/synchronize.png')" ctlBind="{this}" objName="Model_DbTable_Gen_dicos" typeFic="All" />												
													<mx:Button label="Ajouter" click="ajouterDicoclickHandler(event)"/>
													<mx:Button label="Annuler" click="vsDico.selectedChild = viewDico;" />															
												</mx:HBox>
												<!--
												<mx:HBox visible="false" id="importation" width="100%" height="100%">
