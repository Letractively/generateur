<descs>
	<dicos>
		<dico type="conjugaisons">
			<traitements>
				<action char="\r" type="split" desc="récupére chaque modèle de conjugaison">
					<action char="," type="split" desc="récupére chaque instance de terminaison">
						<action deb="0" length="1" val="(" type="VerifSubstr" desc="vérifie la déterminaison du verbe" >
							<NoVerifAction type="SetNoeud"  />
							<action char="." type="SetVerbe" />
						</action>
					</action>
				</action>
			</traitements>	
		</dico>
		<dico type="déterminants">
			<traitements>
				<action char="\r" type="split" desc="récupére chaque modèle du déterminant">
					<action char="," type="split" desc="récupére chaque instance du modèle">
						<action type="VerifLast" desc="vérifie la fin du modèle de déterminant" >
							<NoVerifAction type="SetNoeud"  />
							<action type="SetModele" />
						</action>
					</action>
				</action>
			</traitements>	
		</dico>
	</dicos>
